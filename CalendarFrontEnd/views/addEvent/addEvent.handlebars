<div>
    <p>2/{{event.id}}</p>
    {{#each event.event}}
        <p>Title: {{title}}</p>
        <p>Start Time: {{startTime}}</p>
        <p>End Time: {{endTime}}</p>
        <p>Description: {{description}}</p>
        <p>------------------------</p>
    {{/each}}
</div>
<div>
    {{#if message}}
        <p>You have enough events on a single day, take a break!</p>
        <a href = "/">go back</a>
    {{else}}
    <form method = "post">
        <input name = "title" type = "text" placeholder="title">
        <br>
        <input name = "startTime" type = "text" placeholder ="hh:mm">
        <input name = "endTime" type = "text" placeholder ="hh:mm">
        <br>
        <textarea name="description" type = "text" cols="30" rows="10" placeholder ="detail"></textarea>
        <br>
        <input type = "submit" value = "add event">
    </form>
    {{/if}}
</div>